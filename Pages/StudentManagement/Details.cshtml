@model Lab4.Pages.StudentManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Academic Records</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-10">
            <a class="link-primary" asp-page="Details" asp-route-id="@Model.Student.Id" asp-route-orderby="course">Courses</a>
        </dt>
        <dt class="col-sm-2">
            <a class="link-primary" asp-page="Details" asp-route-id="@Model.Student.Id" asp-route-orderby="grade">Grade</a>
        </dt>
    </dl>

    <dl class="row">
@foreach (var ar in Model.Student.AcademicRecords)           
{
    <dt class="col-sm-10">@ar.CourseCodeNavigation.Title</dt>
    <dt class="col-sm-2">@ar.Grade</dt>

}  
    </dl>
</div>

